<Window x:Class="AlwaysInFocus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlwaysInFocus"
        mc:Ignorable="d"
        Title="Window Finder" Height="320" Width="370"
        Closing="Window_Closing">
    <Window.Resources>
        <local:ReferenceEqualsConverter x:Key="ReferenceEqualsConverter" />
        <local:ReferenceEqualsMultiConverter x:Key="ReferenceEqualsMultiConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Window Type:" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <!-- Dynamic Options -->
            <ItemsControl ItemsSource="{Binding DynamicOptions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <RadioButton GroupName="WindowOptions"
                                         IsChecked="{Binding IsSelected, Mode=OneWay}"                                       
                                         Checked="RadioButton_Checked">
                                <TextBlock Text="{Binding DisplayText}" MaxWidth="160" TextTrimming="CharacterEllipsis"/>
                            </RadioButton>
                            <Button Content="Edit" Margin="10,0,0,0" Padding="5,0" Command="{Binding DataContext.EditOptionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            <Button Content="Delete" Margin="5,0,0,0" Padding="5,0" Command="{Binding DataContext.DeleteOptionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Button Grid.Row="2" Content="Find Window" Click="FindWindow_Click" 
                HorizontalAlignment="Center" Padding="10,5" Margin="0,10,0,0"/>

        <ToggleButton Grid.Row="2" Content="{Binding OnOffLabel}" IsChecked="{Binding IsOn, Mode=TwoWay}" 
                      HorizontalAlignment="Right" Width="80" Margin="0,10,0,0"/>
    </Grid>
</Window>
